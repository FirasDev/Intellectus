                    android:text="Affectation emploi classe"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <Button
                    android:id="@+id/eleveclass"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="124dp"
                    android:layout_marginRight="124dp"
                    android:background="@drawable/button"
                    android:text="Affectation eleve classe"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emploiclass" />

                <Button
                    android:id="@+id/enseignantclass"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="124dp"
                    android:layout_marginRight="124dp"
                    android:background="@drawable/button"
                    android:text="Affectation enseignant classe"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
