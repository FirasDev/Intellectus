<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_field"
        android:ems="10"
        app:fontFamily="@font/sfbold"
        android:hint="Nom de l'école"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_field"
        android:ems="10"
        app:fontFamily="@font/sfbold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorBlue"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtaddress"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtEmail"
        app:fontFamily="@font/sfbold"
        android:textColor="@color/colorBlue"
        android:textSize="18sp"
        android:hint="Adresse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_field" />

    <EditText
        android:id="@+id/txtGov"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtaddress"
        app:fontFamily="@font/sfbold"
        android:textColor="@color/colorBlue"
        android:textSize="18sp"
        android:hint="Gouvernorat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_field" />

    <EditText
        android:id="@+id/txtCity"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtGov"
        app:fontFamily="@font/sfbold"
        android:textColor="@color/colorBlue"
        android:textSize="18sp"
        android:hint="Cité"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_field" />

    <EditText
        android:id="@+id/txtpostal_code"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtCity"
        app:fontFamily="@font/sfbold"
        android:textColor="@color/colorBlue"
        android:textSize="18sp"
        android:hint="Code Postal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:background="@drawable/input_field" />


    <Button
        android:id="@+id/suiv"
        android:layout_width="162sp"
        android:layout_height="52sp"
        android:layout_below="@+id/txtpostal_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:fontFamily="@font/sfmedium"
        android:onClick="goToLogin"
        android:text="Suivant"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="22sp" />


</RelativeLayout>